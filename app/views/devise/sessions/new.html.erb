<div class="wrapper">
  <div class="new-user">
    <div class="new-user__frame">
      <div class="project-title">▼ユーザーログイン</div>
      <div class="project-frame">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
        <div class="field-title">
          <%= f.label :email, "メールアドレス" %>
        </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :form__string %>
        </div>

        <div class="field">
        <div class="field-title">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
        </div>
          <%= f.password_field :password, autocomplete: "current-password", class: :form__string %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>
      <% end %>
      </div>
      </div>
    </div>
</div>


