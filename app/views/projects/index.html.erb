<div class="wrapper">
  <div class="side-bar">
    <%= render "side_bar" %>
  </div>
  <div class="project">
       <div class="project-title">
         ▼依頼案件一覧
       </div>
      <% @projects.each do |project| %>
      <%# 投稿１件分の表示 %>
      <div class='post-content'>
        <%# コメントに関する表示 %>
        <div class='comment'>
          <div class='comment__num'>
            <%= project.comments.count%>
          </div>
          <div class='comment__unit'>
            comments
          </div>
        </div>
         <%# 質問本文の表示 %>
        <div class='project-content'>
            <div class='project-top__area'>
              <div class="project-area__name">
            ▼ <%= project.area.name %>
            </div>
           <%# 完了ステータスの表示%>
              <% if project.completed.present? %>
                <div class="completed-status">処理済み</div>
              <% else %>
                <div class="incomplete-status">未処理</div>
              <% end %>
          <%# 完了ステータスの表示%>
              <div class='project-top__name'>
                <%= project.user.name %>
              </div>
            </div>
          <div class='project-top'>
            <div class='project-top__title'>
              <%= link_to project.category.name, project_path(project.id) %>
              <div class='project-create__at'>
              <%= project.created_at.strftime("%Y-%m-%d-%H:%M") %>
              </div>
            </div>
          </div>
          <div class='project-bottom'>
            <div class='project-bottom__content'>
            納期：<%= project.limit.strftime("%Y年%m月%d日 %H時%M分")  %>まで
            </div>
          </div>
        </div>
      </div>


  <% end %>
  </div>
</div>